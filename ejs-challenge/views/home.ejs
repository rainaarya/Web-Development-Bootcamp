<%- include('partials/header'); -%>
    <h1>Home</h1>

    <p>
        <%= paragraph %>
    </p>
    <% for (var i = 0; i < posts.length; i++) { %>
        <h2><%= posts[i].title %></h2>
        <p><%= posts[i].body.substring(0,100) + " ..." %></p>
        <% if(posts[i].body.length > 100) { %>
            <a href="/posts/<%= posts[i].title %>">Read More</a>
        <% } %>
    <% } %>

<%- include('partials/footer'); -%>